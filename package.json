  "dependencies": {
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "chalk": "^4.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.24.0",
    "mongoose": "^5.9.5",
    "mongoose-paginate": "^5.0.3",
    "morgan": "^1.9.1",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "slug": "^2.1.1",
    "swagger-express-ts": "^1.0.1",
    "swagger-jsdoc": "^3.5.0",
    "swagger-ui-express": "^4.1.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/ejs": "^3.0.1",
    "@types/express": "^4.17.3",
    "@types/faker": "^4.1.10",
    "@types/helmet": "^0.0.45",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "^5.7.6",
    "@types/mongoose-paginate": "^5.0.8",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.11.0",
    "@types/passport": "^1.0.3",
    "@types/passport-facebook": "^2.1.10",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/slug": "^0.9.1",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.1",
    "@types/winston": "^2.4.4",
    "cpy-cli": "^3.1.0",
    "cross-env": "^7.0.2",
    "husky": "^4.2.3",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^6.1.0",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "start": "node ./dist/index.js",
    "build": "rimraf ./dist && tsc --build tsconfig.json && cpy \"**/*.*\" --cwd=src/server/views ../../../dist/server/views --parents && cpy \"**/*.*\" --cwd=src/server/static ../../../dist/server/static --parents",
    "lint": "tslint --project tsconfig.json",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "yarn prettier:base --list-different \"src/**/*.{ts,tsx}\"",
    "prettier:write": "yarn prettier:base --write \"src/**/*.{ts,tsx}\"",
    "serve": "cross-env NODE_ENV=production NODE_SERVER_PORT=8082 node dist/index.js",
    "watch:serve": "ts-node-dev --watch --poll --respawn --transpileOnly ./src/index.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettier:write"
    }
  },
  "engines": {
    "node": "12.x"
  }
}
